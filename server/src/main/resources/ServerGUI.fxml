    <Label fx:id="status" />
<HBox spacing="5.0">
    <Button alignment="TOP_LEFT" maxWidth="Infinity" mnemonicParsing="false" text="Старт" HBox.hgrow="ALWAYS"
            onAction="#actionServerStart" fx:id="btnStartServer"/>
      <padding>
         <Insets left="5.0" right="5.0" />
      </padding>

</HBox>
    <TextArea prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" fx:id="log" editable="false">
    </TextArea>
</VBox>
