<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gb.filestorage.server.ServerController">
    <HBox>
        <Label fx:id="status" alignment="TOP_LEFT">
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding></Label>
        <padding>
            <Insets left="5.0" right="5.0" />
        </padding>
    </HBox>
    <HBox spacing="5.0">
        <Button fx:id="btnStartServer" alignment="TOP_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#actionServerStart" text="Старт" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnStopServer" alignment="TOP_LEFT" maxWidth="Infinity" mnemonicParsing="false" onAction="#actionServerStop" text="Стоп" HBox.hgrow="ALWAYS" />
          <padding>
             <Insets left="5.0" right="5.0" />
          </padding>
        <padding>
            <Insets left="5.0" right="5.0" />
        </padding>
    </HBox>
    <TextArea fx:id="log" editable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
    </TextArea>
</VBox>
